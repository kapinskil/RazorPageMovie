@page
@model RazorPageMovie.Movies.IndexModel

@{
    ViewData["Title"] = "Rp Data";
}

<h2>List Of Movies</h2>

<p>
    <h1><a asp-page="/Movies/Create" class="navbar-brand">Create</a></h1>
</p>

<form>
    <p>
        Title: <input type="Text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
        <a asp-page="./Index">Back to List</a>
    </p>
</form>





<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Moveies[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Moveies[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Moveies[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Moveies[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Moveies)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
